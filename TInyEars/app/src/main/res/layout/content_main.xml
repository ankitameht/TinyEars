<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.innovatehub.mobile.ankita_mehta.tinyears.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewAC"
            android:padding="@dimen/mainActivity_image_padding"
            android:src="@drawable/airconditionicon"
            android:layout_below="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewFan"
            android:src="@drawable/fanicon"
            android:padding="@dimen/mainActivity_image_padding"
            android:layout_below="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
             />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewMW"
            android:src="@drawable/microwaveicon"
            android:padding="@dimen/mainActivity_image_padding"
            android:layout_below="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewHuman"
            android:src="@drawable/humanicon"
            android:padding="@dimen/mainActivity_image_padding"
            android:layout_below="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sample_pie_data"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Let me monitor your room while you work."
        android:id="@+id/textView_mainActivity"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linearLayout2" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_below="@+id/textView_mainActivity"
        android:scaleType="fitXY"
        android:id="@+id/imageButton"
        android:src="@drawable/playicon"
        android:background="@drawable/pauseicon"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
