<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.innovatehub.mobile.ankita_mehta.tinyears.ResultsScreenActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Awaiting Results ..."
        android:id="@+id/ResultsMessage"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutResultScreen">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewACRS"
            android:visibility="gone"
            android:padding="@dimen/mainActivity_image_padding"
            android:src="@drawable/airconditionicon"
            android:layout_marginTop="65dp" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewFanRS"
            android:src="@drawable/fanicon"
            android:visibility="gone"
            android:padding="@dimen/mainActivity_image_padding"
            android:layout_marginTop="65dp" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewMWRS"
            android:visibility="gone"
            android:src="@drawable/microwaveicon"
            android:padding="@dimen/mainActivity_image_padding"
            android:layout_marginTop="65dp" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageViewHumanRS"
            android:visibility="gone"
            android:src="@drawable/humanicon"
            android:padding="@dimen/mainActivity_image_padding"
            android:layout_marginTop="65dp" />
    </LinearLayout>

</LinearLayout>
